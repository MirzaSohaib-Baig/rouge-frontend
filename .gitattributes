# Set default behavior to automatically normalize line endings
* text=auto

# Explicitly declare text files to use LF
*.js     text eol=lf
*.jsx    text eol=lf
*.ts     text eol=lf
*.tsx    text eol=lf
*.json   text eol=lf
*.html   text eol=lf
*.css    text eol=lf
*.scss   text eol=lf
*.md     text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf
*.sh     text eol=lf
*.xml    text eol=lf
*.txt    text eol=lf

# Binary files should not be modified
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
*.ico    binary
*.woff   binary
*.woff2  binary
*.ttf    binary
*.eot    binary
*.pdf    binary
*.zip    binary
*.mp4    binary

# Handle shell scripts correctly on Unix
*.sh     text eol=lf
